@model Estudiante  //!-- Modelo de datos: Clase Estudiante -->

@{
    ViewData["Title"] = "Nueva Matrícula";  <!-- Título de la página -->
}

<h2>Formulario de Matrícula</h2>

<!-- Formulario que envía datos al método Create del controlador -->
<form asp-action="Create" method="post">
    
    <!-- Campo: Nombres -->
    <div class="form-group">
        <label asp-for="Nombres"></label>
        <input asp-for="Nombres" class="form-control" required>
        <span asp-validation-for="Nombres" class="text-danger"></span>
    </div>
    
    <!-- Campo: Apellidos -->
    <div class="form-group">
        <label asp-for="Apellidos"></label>
        <input asp-for="Apellidos" class="form-control" required>
        <span asp-validation-for="Apellidos" class="text-danger"></span>
    </div>
    
    <!-- Campo: Dirección -->
    <div class="form-group">
        <label asp-for="Direccion"></label>
        <input asp-for="Direccion" class="form-control" required>
        <span asp-validation-for="Direccion" class="text-danger"></span>
    </div>
    
    <!-- Campo: Email con validación de tipo email -->
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" type="email" class="form-control" required>
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    
    <!-- Campo: Teléfono con validación numérica -->
    <div class="form-group">
        <label asp-for="Telefono"></label>
        <input asp-for="Telefono" type="number" class="form-control" required>
        <span asp-validation-for="Telefono" class="text-danger"></span>
    </div>
    
    <!-- Campo: Fecha de nacimiento con selector de fecha -->
    <div class="form-group">
        <label asp-for="FeNacimiento"></label>
        <input asp-for="FeNacimiento" type="date" class="form-control" required>
        <span asp-validation-for="FeNacimiento" class="text-danger"></span>
    </div>
    
    <!-- Campo: Curso con lista desplegable -->
    <div class="form-group">
        <label asp-for="Curso"></label>
        <select asp-for="Curso" class="form-control" required>
            <option value="">Seleccione un curso</option>
            <option value="Matemáticas">Matemáticas</option>
            <option value="Ciencias">Ciencias</option>
            <option value="Literatura">Literatura</option>
            <option value="Historia">Historia</option>
            <option value="Inglés">Inglés</option>
        </select>
        <span asp-validation-for="Curso" class="text-danger"></span>
    </div>

    <!-- Botones de acción -->
    <button type="submit" class="btn btn-success">Guardar Matrícula</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>